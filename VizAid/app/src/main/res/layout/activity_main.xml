        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/front2"
            android:id="@+id/imageView4" />
    </LinearLayout>

</RelativeLayout>
